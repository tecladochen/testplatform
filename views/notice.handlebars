<div class="container">
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>通知</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">主页</a></li>
                                    <li class="breadcrumb-item active">通知</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- 主体内容 -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card card-primary card-outline">
                                    <div class="card-header">
                                        <h3 class="card-title">查看通知</h3>

                                        <div class="card-tools">
                                            <a href="#" class="btn btn-tool" title="上一条"><i class="fas fa-chevron-left"></i></a>
                                            <a href="#" class="btn btn-tool" title="下一条"><i class="fas fa-chevron-right"></i></a>
                                        </div>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body p-0">
                                        <div class="mailbox-read-info">
                                            <h5>{{notice.topic}}</h5>
                                            <h6>来自： {{notice.email}}</h6>
                                        </div>
                                        <!-- /.mailbox-read-info -->
                                        <div class="mailbox-read-message">
                                            {{notice.content}}
                                        </div>
                                        <!-- /.mailbox-read-message -->
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <a href="http://localhost:3000/notices"><button type="button" class="btn btn-default"><i class="far"></i> 返回</button></a>                                       
                                    </div>
                                    <!-- /.card-footer -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>