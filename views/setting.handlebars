 <div class="container">
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>设置</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="http://localhost:3000/">主页</a></li>
                                    <li class="breadcrumb-item active">设置</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- 主体内容 -->
                <section class="content">
                    <form action="http://localhost:3000/userUpdate" method="post" onsubmit="return confirm('你确定要保存修改吗?');">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">个人信息</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="折叠">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="inputName">你的邮箱</label>
                                        <input type="text" id="inputName" class="form-control col-5" value="{{user.email}}" readonly name="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputDescription">个性签名</label>
                                        <textarea id="inputDescription" class="form-control" style="resize: none;" rows="3" name="text">{{user.text}}</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputClientCompany">密码</label>
                                        <input type="text" id="" class="form-control col-3" value="{{user.password}}" name="password">
                                    </div>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a href="http://localhost:3000/" class="btn btn-secondary">取消</a>
                            <input type="submit" value="保存修改" class="btn btn-success float-right">
                        </div>
                    </div>
                    </form>
                </section>
                <!-- /.content -->
            </div>
        </div>